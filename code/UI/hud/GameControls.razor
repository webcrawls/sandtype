@namespace TerryTyper.UI.Hud
@using Sandbox.UI
@inherits Panel
@attribute [StyleSheet]

<root>
	<button class="control-button" @onclick=@(OpenType)>
		<img src="/assets/svg/keyboard-solid.svg"/>
	</button>
	<button class="control-button" @onclick=@(OpenInfo)>
		<img src="/assets/svg/question-solid.svg"/>
	</button>
	<button class="control-button" @onclick=@(OpenStats)>
		<img src="/assets/svg/chart-simple-solid.svg"/>
	</button>
	<button class="control-button" @onclick=@(OpenShop)>
		<img src="/assets/svg/shop-solid.svg"/>
	</button>
</root>

@code {

	private void OpenType()
	{
		TyperGame.Entity.UI.PageNavigate( "/race" );
	}

	private void OpenInfo()
	{
		TyperGame.Entity.UI.PageNavigate( "/" );
	}

	
	private void OpenStats()
	{
		TyperGame.Entity.UI.PageNavigate( "/stats" );
	}

	private void OpenShop()
	{
		TyperGame.Entity.UI.PageNavigate( "/shop" );
	}

}
