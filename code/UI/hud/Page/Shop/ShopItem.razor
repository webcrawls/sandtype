@using System
@using Sandbox.UI
@inherits Button
@namespace TerryTyper.UI.Hud.Page.Info
@attribute [StyleSheet]

<root @onclick=@(() => ClickAction?.Invoke())>
	<label>@Name @(!Unlocked ? (Price == 0 ? "" : "🔒 (" + Price + "wt)") : "")</label>
</root>

@code {

	public bool Unlocked = false;
	public Action ClickAction;
	public string Name = "";
	public int Price = 0;

}
