@namespace TerryTyper
@using System
@using Sandbox
@using Sandbox.UI
@inherits Panel
@attribute [StyleSheet]

<root>
	<div class="header row">
		<label>Typing with Terry v2.0.0 ~ Latest Change: Cool UI!</label>
	</div>
	<div class="content row">
		<div class="info">
			<label class="nav-text">@_currency wt</label>
		</div>
		<div class="title"><img class="logo-icon" src="/assets/gif/logo.gif"/></div>
		<div class="control">
			<label class="nav-text">Use Menu Bind</label>
		</div>
	</div>
</root>

@code {

	private bool _isSet = false;
	private long _currency => DataController.Current.Currency;

	protected override int BuildHash()
	{
		return HashCode.Combine( _currency );
	}

}
